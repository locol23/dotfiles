{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(tail:*)",
      "Bash(pwd:*)",
      "Bash(go:*)",
      "Bash(pnpm:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Read(/**)",
      "Edit(/**)",
      "WebSearch"
    ],
    "deny": []
  }
}
